.furima-header
  .furima-header__content
    .furima-header__content__main
      %a{href: "/"}
        = image_tag "logo.png", class:"furima-header__content__main__logo"
      .furima-header__content__main__search
        = form_with url:root_path do |form|
          = form.text_field :name, placeholder: "キーワードから探す", class: "furima-header__content__main__search__input"
          = image_submit_tag ("icon-search1.png"), class: "furima-header__content__main__search__icon", value: ""
    .furima-header__content__main__btn
      .furima-header__content__main__btn__left
        %a.furima-header__content__main__btn__left__category{href: "#"} カテゴリー
        %a.furima-header__content__main__btn__left__brand{href: "#"} ブランド
      .furima-header__content__main__btn__right
        %a.furima-header__content__main__btn__right__login{href: "#"} ログイン
        %a.furima-header__content__main__btn__right__signup{href: "#"} 新規会員登録

