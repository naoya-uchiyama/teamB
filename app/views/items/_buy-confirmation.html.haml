%body
  .confirmation-container
    .confirmation-container__header
      %h1.header-logo
        = link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"), root_path

  =form_for root_path do |form| 
    .confirmation-main
      .confirmation-main__container
        %h2.header-title 購入内容の確認
        
        %section.item-content
          .item-content-inner
            .item-content-inner__box
              %h3.item-content__inner__box__image
                =link_to image_tag("macbook-air-space-gray-config-201810.jpeg",size: '80x50'), "#"
              .item-content-inner__box__detail
                %p.item-content__inner__box__detail__name 13インチMacBook Air - スペースグレイ Apple MWTJ2J/A
                %p.item-content__inner__box__detail__price
                  %span.price ¥115,280
                  %span.item-shipping-fee （税込）送料込み

        %section.item-content2
          .item-content2__inner
            .item-content2__inner__form
            %ul.item-content2-price
              %li.item-content2-price-content
                .item-content2-price-textbox 支払金額
                .item-content2-price-price-amount
                  %span.amount-price ¥115,280
                   
            %ul.item-content2-point-exercise
              %li.item-content2-point-exercise-content
          
                .item-content2-point-inner
                  =form.check_box :checkbox,id: :point    
                  %i.icon-check
                  %label ポイントを使用（所持ポイント:P0）
            %section.payment-info
              .payment-info-inner
                .content
                  %h3.left-content 支払い方法                
                  =link_to "変更する", "#",class:"right-content"
                  
                %p.payment-card-info
                  クレジットカード
                  %br/
                  ************6883
                  %br/
                  有効期限 06 / 21

                %figure.credit-card-logo
                  =link_to image_tag("//pcweb-assets.mercdn.net/assets/img/card/visa.svg?2246739708", size: "49x15")

            %section.delivery-info
              .delivery-info__inner
                %h4.delivery-info-content 配送先
                =link_to "登録してください", "#" 
                %i.icon-plus-circle
                  

            %section.purchase-button
              =form.submit "購入する",class:"btn-submit"

  .confirmation-footer
    .confirmation-footer__content
      %ul.menu
        %li プライバシーポリシー
        %li FURIMA利用規約
        %li 特定商取引に関する表記

      .confirmation-footer__content__nav-company-logo
        =link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg",size: '80x65') 

      %p
        %small © FURIMA
        %script{src: "//pcweb-assets.mercdn.net/assets/js/app.js?3178455151"}
