%body
  .session-container
    .session-container__header
      %h1
        %a{:href => "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"}
          %img{:alt => "furima", :src => "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"}/

    .session-main
      .session-main__login-panel
        .session-main__login-panel__login-no-account
          %p.session-no-account-text アカウントをお持ちでない方はこちら
          %a.session-no-account-navi
          =link_to "新規登録", new_user_registration_path 

        .session-main__login-panel__login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.icon-facebook
            Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            Googleでログイン

        .session-main__login-panel__login-session-form
          .session-main__login-panel__login-session-form__login-form-inner
            .session-main__login-panel__login-session-form__login-form-inner__form-group
              =form_for root_path do |form|
                =form.email_field :name, placeholder: "メールアドレス", size: "40x20"

            .session-main__login-panel__login-session-form__login-form-inner__form-group
              =form_for root_path do |form|
                =form.text_field :name, placeholder: "パスワード", size: "40x20"

            .session-main__login-panel__login-session-form__login-form-inner__form-group
              .g-recaptcha.login-captcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
                %div{:style => "width: 304px; height: 78px;"}
                  %div
                    %iframe{:frameborder => "0", :height => "78", :name => "a-mwyc0ingcn34", :role => "presentation", :sandbox => "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", :src => "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=wk6lx42JIeYmEAQSHndnyT8Q&size=normal&cb=5ex9b0iu1ich", :width => "304"}
                  %textarea#g-recaptcha-response.g-recaptcha-response{:name => "g-recaptcha-response", :style => "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
                %iframe{:style => "display: none;"}

            %button.login-submit.session-login.btn-red{:type => "submit"} ログイン
            %a.forget-password{:href => "#"} パスワードをお忘れの方

      .footer  
        .footer__nav-company-rule
          %ul.menu
            %li プライバシーポリシー
            %li FURIMA利用規約
            %li 特定商取引に関する表記

        %a.company-logo{:href => "https://www.furima.tokyo"}
          %img{:alt => "FURIMA", :height => "65", :src => "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg", :width => "80"}/

        %p
