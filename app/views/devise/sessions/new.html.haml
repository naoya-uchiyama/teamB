%body
  .session-container
    .session-container__header
      %h1
      = link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"), "root_path"

    .session-main
      .session-main__login-panel
        .session-main__login-panel__login-no-account
          %p.session-no-account-text アカウントをお持ちでない方はこちら
          .session-no-account-navi
          =link_to "新規登録", new_user_registration_path 

        .session-main__login-panel__login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.icon-facebook
            Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            Googleでログイン

      =form_with model: @user, url: user_session_path, local: true do |form|
        .session-main__login-panel__login-session-form
          .session-main__login-panel__login-session-form__login-form-inner
            .session-main__login-panel__login-session-form__login-form-inner__form-group
              =form.email_field :email, placeholder: "メールアドレス", size: "40x20"

            .session-main__login-panel__login-session-form__login-form-inner__form-group  
              =form.password_field :password, placeholder: "パスワード", size: "40x20"

            .session-main__login-panel__login-session-form__login-form-inner__form-group
              .session-main__login-panel__login-session-form__login-form-inner__form-group__login-captcha{"data-sitekey": "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
                .session-main__login-panel__login-session-form__login-form-inner__form-group__login-captcha__style
                  %div
                    %iframe{frameborder: "0", height: "78", name: "a-95ae1ld089wp", role: "presentation", sandbox: "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", :src => "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=wk6lx42JIeYmEAQSHndnyT8Q&size=normal&cb=y00t6esziywu", width: "304"}                  %textarea#g-recaptcha-response.g-recaptcha-response{name: "g-recaptcha-response"

            =form.submit "ログイン", class:"btn-red"
            .forget-password 
              =link_to "パスワードをお忘れの方","#"

      .footer  
        .footer__nav-company-rule
          %ul.menu
            %li プライバシーポリシー
            %li FURIMA利用規約
            %li 特定商取引に関する表記

        .footer__nav-company-logo
          =link_to image_tag("http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg",size: '80x65') 

        %p
          %small © FURIMA
          %script{src: "//pcweb-assets.mercdn.net/assets/js/app.js?3178455151"}
